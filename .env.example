# CM Diagnostics Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000
HOST=localhost
APP_NAME="CM Diagnostics"
APP_VERSION=1.0.0

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-change-this

# Database
DATABASE_URL=postgresql://cmdiag:password@localhost:5432/cm_diagnostics
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Content Manager Connection
CM_API_URL=https://your-cm-instance.com/api
CM_API_KEY=your-cm-api-key
CM_API_SECRET=your-cm-api-secret
CM_TIMEOUT=30000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="CM Diagnostics <noreply@cm-diagnostics.com>"

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=cm-diagnostics

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3001
JAEGER_URL=http://localhost:16686

# Machine Learning
ML_API_URL=http://localhost:5000
ML_API_KEY=your-ml-api-key
MODEL_STORAGE_PATH=./models
ENABLE_GPU=false

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_SAMPLING_RATE=1.0

# Feature Flags
ENABLE_AUTO_REMEDIATION=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_ML_INSIGHTS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_COMPRESS=true

# Cache
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# WebSocket
WS_PORT=3001
WS_PATH=/ws

# API Keys (for external services)
OPENAI_API_KEY=
SLACK_WEBHOOK_URL=
PAGERDUTY_API_KEY=

# Development
DEV_MODE=true
MOCK_DATA=false
DEBUG=cm-diagnostics:*