# API Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cm_diagnostics_dev"

# Auth Configuration
JWT_SECRET=cm-diagnostics-dev-secret-key
JWT_REFRESH_SECRET=cm-diagnostics-dev-refresh-secret
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Content Manager Configuration
CM_API_TIMEOUT=30000
CM_MAX_CONCURRENT_CONNECTIONS=10

# IDOL Configuration
IDOL_DEFAULT_TIMEOUT=30000

# Enterprise Studio Configuration
ES_BASE_URL=https://es.example.com
ES_USERNAME=demo
ES_PASSWORD=demo123

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_FROM=noreply@cm-diagnostics.local

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:4000/graphql